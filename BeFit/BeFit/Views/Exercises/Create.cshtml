@* Definiuje model dla widoku jako pojedynczy obiekt Exercise. *@
@model BeFit.Models.Exercise

@{
    // Ustawia tytuł strony.
    ViewData["Title"] = "Utwórz Nowy Typ Ćwiczenia";
}

<h1>@ViewData["Title"]</h1>

<h4>Typ Ćwiczenia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @* Formularz wysyłający dane do akcji Create kontrolera Exercises. *@
        <form asp-action="Create">
            @* Kontener na komunikaty błędów walidacji całego modelu. *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3"> @* Dodano mb-3 dla marginesu dolnego *@
                @* Etykieta dla pola Name (używa nazwy z atrybutu [Display] w modelu). *@
                <label asp-for="Name" class="control-label"></label>
                @* Pole wprowadzania dla pola Name. *@
                <input asp-for="Name" class="form-control" />
                @* Miejsce na komunikat błędu walidacji dla pola Name. *@
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3"> @* Dodano mb-3 dla marginesu dolnego *@
                @* Etykieta dla pola Description. *@
                <label asp-for="Description" class="control-label"></label>
                @* Pole tekstowe (textarea) dla pola Description (sugerowane przez [DataType.MultilineText]). *@
                <textarea asp-for="Description" class="form-control"></textarea>
                @* Miejsce na komunikat błędu walidacji dla pola Description. *@
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                @* Przycisk wysyłający formularz. *@
                <input type="submit" value="Utwórz" class="btn btn-primary" />
                @* Link powrotu do listy typów ćwiczeń. *@
                <a asp-action="Index" class="btn btn-secondary">Powrót do Listy</a>
            </div>
        </form>
    </div>
</div>

@* Sekcja włączająca skrypty walidacji po stronie klienta. *@
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
